@model EAD_Project.PMS.Entities.ProductDTO
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_MyProductLayout.cshtml";
}

<form action="/Product/Save" method="post" enctype="multipart/form-data">
   @if (@Model.PictureName != "")
   {
        <img src="/UploadedFiles/@Model.PictureName" style="width:100px;height:100px;" /> <br />
    }
    Note:
    &nbsp;&nbsp;&nbsp; for Bags <br /><b>Category is 1</b><br />
    &nbsp;&nbsp;&nbsp; for Abayas <b>Category is 2</b><br />
    &nbsp;&nbsp;&nbsp; for Clothes <br /><b>Category is 3</b><br />
    &nbsp;&nbsp;&nbsp; for Cosmetics <b>Category is 4</b><br />
    <input type="hidden" name="ProductID" value="@Model.ProductID" />
    <input type="hidden" name="PictureName" value="@Model.PictureName" />
    Name<input type="text" name="Name" value="@Model.Name" /> <br />
    Price: <input type="text" name="Price" value="@Model.Price" /> <br />
    @*Category: <input type="text" name="Category" value="@Model.Category" /> <br />*@
    Image: <input type="file" name="Image" />
    <input type="submit" value="Save" />
</form>